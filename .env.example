# =============================================================================
# Model Provider Configuration
# =============================================================================

# Choose provider: "openai" or "vllm"
MODEL_PROVIDER=openai

# =============================================================================
# OpenAI Configuration (when MODEL_PROVIDER=openai)
# =============================================================================

OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Models
GAIA_ACTOR_MODEL=gpt-5
GAIA_SPEC_MODEL=gpt-5-mini

# =============================================================================
# vLLM Configuration (when MODEL_PROVIDER=vllm)
# =============================================================================

# vLLM server endpoint
VLLM_BASE_URL=http://localhost:8003/v1

# vLLM doesn't need real API key
VLLM_API_KEY=EMPTY

# vLLM Models (use model path or name from vLLM server)
# GAIA_ACTOR_MODEL=/home/nvidia/data/models/Qwen3-14B
# GAIA_SPEC_MODEL=/home/nvidia/data/models/Qwen3-14B

# =============================================================================
# Other API Keys
# =============================================================================

SERPER_API_KEY=your-serper-api-key-here

# =============================================================================
# Execution Configuration
# =============================================================================

# Disable speculation (1=disabled, 0=enabled)
DISABLE_SPECULATION=0

# Verification strategy: "exact", "tool_name_only", "none"
VERIFICATION_STRATEGY=exact

# Maximum reasoning steps
GAIA_MAX_STEPS=15

# Top-K for speculation
GAIA_TOPK=3

